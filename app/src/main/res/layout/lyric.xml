<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:scaleType="center"
        android:src="@drawable/artist_img" />
    <LinearLayout
        android:id="@+id/headerPlaying"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        >
        <LinearLayout
            android:id="@+id/backButtonLayout"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="0"
            android:background="@drawable/back_btn_custom"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/iconBack"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/arrow_back"
                android:paddingLeft="28dp"
                app:backgroundTint="#B7B7B7"
                android:contentDescription="Go back"/>
        </LinearLayout>

        <TextView
            android:id="@+id/header"
            android:textColor="#B7B7B7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Now Playing"
            android:textSize="24sp"
            android:layout_weight="1">

        </TextView>

        <ImageView
            android:id="@+id/threeDots"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:src="@drawable/three_dots"
            app:tint="#B7B7B7" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_alignParentBottom="true"
        android:paddingVertical="@dimen/_15sdp"
        android:paddingHorizontal="@dimen/_15sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/song_artist"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                app:cardCornerRadius="@dimen/_50sdp"
              >
                <ImageView
                    android:id="@+id/artistAvata"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/artist_img"
                   />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/songName"
                    android:textColor="#B7B7B7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bad Guy"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/artistName"
                    android:textColor="#B7B7B7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Billie English"
                    android:textSize="20sp"/>
            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/heartBtn"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/heart_green_ouline"
                android:layout_gravity="center_vertical"
                app:tint="@color/btnPressed"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_below="@+id/song_artist"
            android:id="@+id/seekbarCon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
           >

            <SeekBar
                android:maxHeight="@dimen/_25sdp"
                android:progressTint="#ffffff"
                android:thumbTint="#B7B7B7"
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentTop="true"
                />
            <TextView
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="#B7B7B7"
                android:id="@+id/played"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textSize="15sp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="#B7B7B7"
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textSize="15sp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_weight="4"
            android:id="@+id/bottomHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_25sdp"
            android:layout_below="@+id/seekbarCon"
            android:gravity="center_horizontal|center_vertical"

            >

            <ImageButton
                android:id="@+id/repeateBtn"
                android:contentDescription="Repeate"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/repeate"
                />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/previousBtn"
                android:contentDescription="previous"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/previous"
                />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <RelativeLayout
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center"
                android:background="@drawable/ellipse_play">
                <ImageButton
                    android:id="@+id/pauseBtn"
                    android:contentDescription="pause"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/pause"/>
            </RelativeLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/nextBtn"
                android:contentDescription="Next"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/next"
                />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/shuffleBtn"
                android:contentDescription="Shuffe"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/shuffle"
                />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>